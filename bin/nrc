#!/usr/bin/env bash

set -euo pipefail

#statix check
nix fmt ./flake.nix ./hosts ./modules ./templates --quiet
git add --intent-to-add . 
set +e
touch /tmp/build-error
sudo bash -c "nixos-rebuild build $@ && rm /tmp/build-error" 
if [[ ! -f /tmp/build-error ]]; then 
  nvd diff /run/current-system result
fi
